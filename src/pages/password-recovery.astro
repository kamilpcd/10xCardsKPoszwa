---
import Layout from "../layouts/Layout.astro";
import PasswordRecoveryForm from "../components/PasswordRecoveryForm";
---

<Layout title="Odzyskiwanie hasła - FiszkiAIkp">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Odzyskiwanie hasła</h1>
    <p class="mb-6 text-gray-700 dark:text-gray-300">
      Podaj swój adres email, aby otrzymać link do zresetowania hasła.
    </p>
    <div class="max-w-md mx-auto">
      <PasswordRecoveryForm client:load />
      <div class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400">
        <p>
          <a href="/login" class="text-blue-600 dark:text-blue-400 hover:underline">Powrót do logowania</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
